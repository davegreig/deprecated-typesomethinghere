<% require 'html_truncator' %>
<div class="container">
  <div class="col-sm-10 col-sm-offset-1 col-xs-12">
    <% @posts.each do |post| %>
        <div class="col-xs-12 text-center blog-post">
          <div class="text-center">
            <h2><%= post.title %></h2>
            <h6><%= post.created_at.strftime('%b %d, %Y') %></h6>
          </div>
          <div class="blog-post-content">
            <%= raw HTML_Truncator.truncate(post.body, 100) %>

          </div>
              <p><%= link_to "Read More", post_path(post), class: "btn btn-primary" %></p>
        </div>
    <% end %>
  </div>
</div>